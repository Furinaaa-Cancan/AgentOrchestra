{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://multi-agent.local/specs/skill.schema.json",
  "title": "Skill Contract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "version",
    "description",
    "triggers",
    "inputs",
    "outputs",
    "preconditions",
    "postconditions",
    "quality_gates",
    "timeouts",
    "retry",
    "fallback",
    "compatibility",
    "handoff"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]{2,63}$"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "triggers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "schema"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "schema": {
            "type": "string"
          },
          "required": {
            "type": "boolean"
          }
        }
      }
    },
    "outputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "schema"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "schema": {
            "type": "string"
          },
          "required": {
            "type": "boolean"
          }
        }
      }
    },
    "preconditions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "postconditions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "quality_gates": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "lint",
          "unit_test",
          "integration_test",
          "contract_test",
          "security_scan",
          "artifact_checksum"
        ]
      }
    },
    "timeouts": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "run_sec",
        "verify_sec"
      ],
      "properties": {
        "run_sec": {
          "type": "integer",
          "minimum": 30,
          "maximum": 86400
        },
        "verify_sec": {
          "type": "integer",
          "minimum": 30,
          "maximum": 86400
        }
      }
    },
    "retry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "max_attempts",
        "backoff"
      ],
      "properties": {
        "max_attempts": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10
        },
        "backoff": {
          "type": "string",
          "enum": [
            "none",
            "linear",
            "exponential"
          ]
        }
      }
    },
    "fallback": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "on_failure"
      ],
      "properties": {
        "on_failure": {
          "type": "string",
          "enum": [
            "escalate_to_reviewer",
            "retry",
            "abort"
          ]
        }
      }
    },
    "compatibility": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "min_orchestrator_version"
      ],
      "properties": {
        "min_orchestrator_version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
        },
        "supported_agents": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifact_path",
        "required_fields"
      ],
      "properties": {
        "artifact_path": {
          "type": "string"
        },
        "required_fields": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
