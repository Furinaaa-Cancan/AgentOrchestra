{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://multi-agent.local/specs/task.schema.json",
  "title": "Multi-Agent Task",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "task_id",
    "trace_id",
    "skill_id",
    "skill_version",
    "producer",
    "consumer",
    "idempotency_key",
    "input_digest",
    "artifact_uri",
    "expected_checks",
    "timeout_sec",
    "retry_budget",
    "priority",
    "required_capabilities",
    "state",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "task_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]{2,63}$"
    },
    "trace_id": {
      "type": "string",
      "pattern": "^[a-f0-9-]{16,64}$"
    },
    "skill_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]{2,63}$"
    },
    "skill_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "producer": {
      "type": "string",
      "minLength": 2
    },
    "consumer": {
      "type": "string",
      "minLength": 2
    },
    "idempotency_key": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128
    },
    "input_digest": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "artifact_uri": {
      "type": "string",
      "minLength": 1
    },
    "expected_checks": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "lint",
          "unit_test",
          "integration_test",
          "contract_test",
          "security_scan",
          "artifact_checksum"
        ]
      }
    },
    "timeout_sec": {
      "type": "integer",
      "minimum": 30,
      "maximum": 86400
    },
    "retry_budget": {
      "type": "integer",
      "minimum": 0,
      "maximum": 10
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "normal",
        "high",
        "urgent"
      ]
    },
    "required_capabilities": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "planning",
          "implementation",
          "testing",
          "review",
          "security",
          "docs"
        ]
      }
    },
    "state": {
      "type": "string",
      "enum": [
        "DRAFT",
        "QUEUED",
        "ASSIGNED",
        "RUNNING",
        "VERIFYING",
        "APPROVED",
        "MERGED",
        "DONE",
        "FAILED",
        "RETRY",
        "ESCALATED",
        "CANCELLED"
      ]
    },
    "deps": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9][a-z0-9-]{2,63}$"
      }
    },
    "done_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "owner": {
      "type": "string"
    },
    "input_payload": {
      "type": "object"
    },
    "metadata": {
      "type": "object"
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
